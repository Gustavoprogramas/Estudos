#include <stdlib.h>
#include <stdio.h>
#include <locale.h>
int main ()
{
    setlocale (LC_ALL, "Portuguese");
    int vet[10] = {1,2,3,4,45,6,7,8,9,10};
    int maior, i;
    for (i=0; i<10;i++)
    {
        if (i == 0)
        {
            vet[i] = maior;


        }
        else
            if (vet[i] > maior)
        {
            maior = vet[i];
        }


    }

printf("\n\t%d", maior);









#include <stdio.h>
#include <stdlib.h>


int main ()
{
    float A[10], maior;
    int i, pos;

    printf("A[0]: ");
    scanf("%f", &A[0]);
    maior = A[0];
    pos =0;
    for (i=1; i<10; i++)
    {
        printf("A[%d] = ", i);
        scanf("%f",&A[i]);

        if (A[i]> maior)
        {
            maior = A[i];
            pos = i;
        }



    }
    printf("Vetor = %f pos = %d", maior, pos);

}

}


#include <stdio.h>
#include <stdlib.h>
#define Tam 20

int main ()
{
    int A[Tam], B[Tam], C[Tam];
    int i, n;
    do
    {
        printf("Tamanho do vetor(m√°ximo 20): ");
        scanf("%d", &n);
        if (n<=0 || n>20)
            printf("Numero invalido");
    }while (n<=0 || n>20);
    for (i=0; i<n; i++)
    {
        printf("A[%d] = ", i);
        scanf("%d", &A[i]);
    }
    for (i=0; i<n; i++)
    {
        printf("B[%d] = ", i);
        scanf("%d", &B[i]);
        C[i] = A[i] + B[i];
    }
    for (i=0; i<n; i++)
    {
        printf("%d + %d = %d \n\ ", A[i], B[i], C[i]);
    }

}
