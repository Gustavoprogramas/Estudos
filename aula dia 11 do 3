#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main ()
{
setlocale (LC_ALL, "Portuguese");
    int n, num, som, par=0, impar=0;
    printf ("\n\tDigite a quantia de números que você irá inserir: ");
    scanf ("%d", &n);
    if (n>0)
    {
         for (n; n>0; n--)
        {

            printf ("\n\tDigite os números a serem somados: ");
            scanf ("%d",&num);
            if (num%2 == 0)
            {
                par = par + num;
            }
            else
            {
                impar = impar + num;
            }




        }

        printf ("\n\nSoma dos pares: %d, Soma dos impares: %d", par, impar);
    }
    else
    {
        printf ("\n\tVocê ta usando o programa pra quê?");
    }














}







sistema: #include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main ()
{
setlocale (LC_ALL, "Portuguese");

float a, x, b, y, c, d, e, f;
int opc;
for (; ;)
{
    system ("cls");
    printf ("\n\tQuer rodar o programa? caso sim digite 1, caso nao digite 0: ");
    scanf ("%d", &opc);
    switch (opc)
    {
    case 0:
        printf ("\n\tEntão rala mlk, panguão do crlh fdp. \n\n");
        system ("pause");
        return 0;
        break;
    }
    printf ("\n\tDigite a variável a: ");
    scanf ("%f", &a);
    printf ("\n\tDigite a variável b: ");
    scanf ("%f", &b);
    printf ("\n\tDigite a variável c: ");
    scanf ("%f", &c);
    printf ("\n\tDigite a variável d: ");
    scanf ("%f", &d);
    printf ("\n\tDigite a variável e: ");
    scanf ("%f", &e);
    printf ("\n\tDigite a variável f: ");
    scanf ("%f", &f);

    if (((c*e) - (b*f)) / ((a*e)- (b*d)) > 0 && ((a*f)-(c*d))/ ((a*e)- (b*d)) > 0)

    {
         x = ((c*e) - (b*f)) / ((a*e) - (b*d));
        y = ((a*f)-(c*d))/ ((a*e)- (b*d));
        printf ("\n\tA Solução para x é: %.2f ", x);
        printf ("\n\tA Solução para y é: %.2f ", y);
        printf ("\n\n");
        system ("pause");
    }


    else
    {
        printf ("\n\tSistema Impossível, coloque outro. \n\n ");
        system ("pause");
    }






}





}
